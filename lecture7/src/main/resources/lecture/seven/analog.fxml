<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>

<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="lecture.seven.AnalogClockController">
    <Pane prefHeight="300" prefWidth="300">
    <Circle fx:id="clockFace" centerX="150" centerY="150" fill="white" radius="140" stroke="black" />

    <Group fx:id="ticksAndNumbers" />

    <Line fx:id="hourHand" stroke="black" strokeWidth="4" />
    <Line fx:id="minuteHand" stroke="black" strokeWidth="3" />
    <Line fx:id="secondHand" stroke="red" strokeWidth="1" />

</Pane>
<Button alignment="CENTER" onAction="#switchToDigital" text="Переключить на цифровые часы" />
</VBox>
